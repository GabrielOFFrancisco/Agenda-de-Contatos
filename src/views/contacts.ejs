<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
          <h1 class="text-center">Contato</h1>
          <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

          <div class="errorMsg col my-2 alert"><%- include('includes/messages'); %></div>

            <% if(contacts._id) { %>
              <form class="my-2 form-contacts" action="/contacts/edit/<%= contacts._id %>" method="POST">
                <% } else { %>
                  <form class="my-2 form-contacts" action="/contacts/register" method="POST">
                  <% } %>

                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                    <div class="form-group">
                      <label>Nome</label>
                      <input value="<%= contacts.name %>" type="text" class="form-control" name="name">
                    </div>

                    <div class="form-group">
                      <label>Sobrenome</label>
                      <input value="<%= contacts.lastName %>" type="text" class="form-control" name="lastName">
                    </div>

                    <div class="form-group">
                      <label>Email</label>
                      <input value="<%= contacts.email %>" type="email" class="form-control" name="email">
                    </div>

                    <div class="form-group">
                      <label>Telefone</label>
                      <input value="<%= contacts.telephone %>" type="tel" class="form-control" name="telephone">
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
              </form>

              <div class="col-lg-2"></div>
        </div>
      </div>

      <%- include('includes/footer') %>