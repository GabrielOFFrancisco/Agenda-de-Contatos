<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
          <h1 class="text-center">Criar conta ou entrar</h1>
          <p class="text-center lead">Faça login ou crie uma conta</p>

          <%- include('includes/messages'); %>

          <div class="row my-5">
            <div class="col-lg mr-3">
              <h4>Faça seu cadastro</h4>
              <p class="my-3">Se você ainda não está registrado, por favor preencha o formulário abaixo:</p>

              <form class="my-2" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar conta</button>
              </form>
            </div>

            <div class="col-lg ml-3">
              <h4>Faça seu login</h4>
              <p class="my-3">Se já está registrado, realize o login abaixo:</p>

              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group">
                  <label>Seu e-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>
                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>

          <div class="col-lg-2"></div>
        </div>
      </div>

      <%- include('includes/footer') %>